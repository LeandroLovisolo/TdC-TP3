%%%%%%%%%% Insertar estadísticas - Inicio %%%%%%%%%%
\newcommand{\estadisticas}[3]{
  \begin{figure}[H]
    \small
    \verbatiminput{#1}
    \normalsize
    \caption{#2}
    \label{#3}
  \end{figure}
}
%%%%%%%%%% Insertar estadísticas - Fin %%%%%%%%%%


%%%%%%%%%% Insertar gráfico - Inicio %%%%%%%%%%
\newcommand{\grafico}[3]{
  \begin{figure}[H]
    \includegraphics[type=pdf,ext=.pdf,read=.pdf]{#1}
    \caption{#2}
    \label{#3}
  \end{figure}
}
